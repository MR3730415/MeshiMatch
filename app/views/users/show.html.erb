<div class=background>
<div class="container">
  <div class="row d-flex align-items-center text-center">
    <div class="col-lg-2 my-3">
      <h3><%= @user.name %>My page</h3>
    </div>

    <div class="col-lg-4">
      <%= attachment_image_tag @user, :pf_image, class: "profile-image-to-circle", size:'300x300', format: 'jpg', fallback: 'user.jpg' %>
    </div>

    <div class="col-lg-6">
      <table class="table table-borderless mb-5">
        <tbody>
          <tr>
            <td>ニックネーム</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-edit" %>
      </div>
    </div>
  </div>
</div>
</div>