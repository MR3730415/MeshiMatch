<div class="background">
<div class="container">
  <div class="row">
    <div class="food-list">
    <% @food_images.each do |food_image| %>
    <% end %>
    </div>

    <div class="col-lg-9 offset-lg-1">
      <div class="mb-3">
        <div class="search-form">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索" %>
        <% end %>
        </div>
      </div>

      <div class="all-card">
       <% @food_images.each do |food_image| %>
        <div class="card mb-2 mx-3">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>
                 <%= link_to photo_path(food_image.id) do %>
                 <%= attachment_image_tag food_image, :image,size: "au", format: 'jpg' %>
                 <% end %>
                </td>
              </tr>
              <tr>
                <td>店舗名[<%= food_image.shop_name %>]</td>
              </tr>
              <tr>
                <td>タイトル[<%= food_image.title %>]</td>
              </tr>
              <tr>
                <td>[<%= food_image.caption %>]</td>
              </tr>
            </tbody>
          </table>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
</div>