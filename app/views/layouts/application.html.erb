<!DOCTYPE html>
<html>
  <head>
    <title>Meshimatch</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav-color">
      <div>
        <nav class = "navbar navbar-expand-lg">
          <div class="container">
             <a class="navbar-brand p-1" href="/"><%= image_tag('Meshimatch.png') %></a>
            
            <ul class = "navbar-nav ml-auto">
              <% if user_signed_in? %>
              <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "MeshiFind", food_images_path, class: "text-dark" %>
                </button>
                
                <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "log out", destroy_user_session_path, method: :delete,  class: "text-dark" %>
                </button>
              <% elsif food_signed_in? %>
              <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "投稿", new_food_image_path, class: "text-dark" %>
              </button>
              <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "投稿一覧", food_images_path, class: "text-dark" %>
                </button>
              
                <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "log out", destroy_food_session_path, method: :delete, class: "text-dark" %>
                </button>
              <% else %>
               <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "USER sign up", new_user_registration_path, class: "text-dark" %>
                </button>
                
                <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "USER log in", new_user_session_path, class: "text-dark" %>
                </button>
             
              <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "Food sign in", new_food_registration_path, class: "text-dark" %>
              </button>
             
             <button type="button" class="btn btn-warning text-light border rounded mx-3">
                <%= link_to "Food log in", new_food_session_path, class: "text-dark" %>
             </button>
              <% end %>
            </ul>
            <!--</div>-->
        </div>
      </nav>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
